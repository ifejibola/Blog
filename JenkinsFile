pipeline {
    agent any 
    stages {
        stage('Hello Msg, Install npm pkgs...') {
            steps {
                echo 'Welcome ife!' 
                npm install
            }
        }
        stage('Start Application') {
            steps {
                echo 'Webpack Build, Express Server' 
                npm run dev
            }
        }
        // stage('test') {
